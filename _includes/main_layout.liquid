<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}"/>
  <link href="https://cdn.jsdelivr.net/npm/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet">
  <link rel="stylesheet" href="/{% with_hash "css/blog.css" %}"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  {% if lang == "en" -%}
    {% assign originalTitle = title %}
  {%- else -%}
    {% assign originalTitle = en %}
  {%- endif -%}
  {%- for collection in collections.all -%}
    {%- assign otherArticles = collection | where: "data.en", originalTitle %}
    {%- assign originalArticles = collection | where: "data.title", originalTitle %}
    {%- for article in originalArticles -%}
      {%-if article.data.lang == "en" -%}
        <link rel="alternate" href="{{ site.url }}{{ article.url }}" hreflang="x-default" />
        <link rel="alternate" href="{{ site.url }}{{ article.url }}" hreflang="{{ article.data.lang }}" />
      {% endif -%}
    {% endfor -%}
    {%- for article in otherArticles -%}
      <link rel="alternate" href="{{ site.url }}{{ article.url }}" hreflang="{{ article.data.lang }}" />
    {%- endfor -%}
  {%- endfor %}
  <link rel="canonical" href="{{ site.url }}{{ page.url }}" />
</head>
<body>
  <nav class="main">
    <pre></pre>
    <div class="dark-mode radio brakets">
      <input name="mode" type="radio" id="mode_light" value="light" checked/>
      <label for="mode_light">
        light
      </label>
      <input name="mode" type="radio" id="mode_dark" value="dark"/>
      <label for="mode_dark">
        dark
      </label>
    </div>
    <div class="bottom">
      {%- if lang == 'en' -%}
        <a href="/blog/rss.xml" class="rss brakets">RSS</a>
      {%- else -%}
        <a href="/{{ lang }}/blog/rss.xml" class="rss brakets">RSS</a>
      {%- endif -%}
      <a href="https://twitter.com/jcubic">@jcubic</a>
    </div>
  </nav>
  <header class="top">
    {%- if lang == 'en' -%}
      <a href="/blog/">
    {%- else -%}
      <a href="/{{ lang }}/blog/">
    {%- endif -%}
    <pre class="big" aria-hidden="true" role="presentation">{{ figlet.big }}</pre>
    <pre class="small" aria-hidden="true" role="presentation">{{ figlet.small }}</pre>
    <pre class="wrap" aria-hidden="true" role="presentation">{{ figlet.wrap }}</pre>
    </a>
  </header>
  <main>
  {{ content -}}
  </main>
  <footer>
    {%- if lang != "en" -%}
      {% assign lang_suffix = lang | append: "/" | prepend: "/" %}
    {%- else -%}
      {% assign lang_suffix = "/" %}
    {%- endif %}
    <p>Copyright (c) {{ "now" | date: "%Y" }} <a href="https://jakub.jankiewicz.org{{ lang_suffix }}">Jakub T. Jankiewicz</a> | {{ source | md }}</p>
   <p>{{ license | md }}</p>
 </footer>
 <div class="system">
   <!-- ref: https://www.youtube.com/watch?v=W3bF4ASGJWA -->
   <a href="#" id="pi">Î </a>
   <canvas id="m"></canvas>
   <div class="off-site">
     <span class="font">m</span>
   </div>
   <div class="trinity-dialog hidden">
     <header>
       <ul>
         <li><a href="#"></a></li>
         <li><a href="#"></a></li>
       </ul>
       <span class="title">mobile</span>
     </header>
     <div class="body"></div>
   </div>
   <!-- ref: https://www.youtube.com/watch?v=0PxTAn4g20U -->
 </div>
 <div class="cookies" id="cookie_baner" style="display: none">
   <p>{{ cookie.pre }} <a href="/cookies.html">{{ cookie.more }}</a></p>
   <p><button id="cookie_ok" class="btn">{{ cookie.ok }}</button></p>
 </div>
 <script type="module" src="/{% with_hash "js/blog.js" %}"></script>
 {%- include "_analytics" -%}
</body>
</html>
